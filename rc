gc			= off

### URGENCIES ################################################################

# mere presence of tags should not alter the urgency calculation, and
# specific tags can still be selected for with
# urgency.user.tag.foo.coefficient
#
urgency.tags.coefficient = 0

# right now we do not want to alter urgency merely by how old something is;
# later on this might be more useful
#
urgency.age.coefficient = 0

# we have not yet figured out how we use projects in any sense other than
# taxonomy, and specific projects can still be selected for with
# urgency.user.project.foo.coefficient
#
urgency.project.coefficient = 0

# seriously? presence of annotations alter the urgency? why, because it
# indicates that maybe we have been working on something? until this is better
# thought through, better to disable it
#
urgency.annotations.coefficient = 0

# the degree to which we want parents in the chain to have trickle-down
# dependencies
#
urgency.inherit.coefficient = 2

urgency.user.tag.job.coefficient	=  6
urgency.user.tag.future.coefficient	= -3
urgency.user.tag.maybe.coefficient	= -1
urgency.user.tag.likely.coefficient	=  2


### REPORTS ##################################################################

report.list.columns	= id,depends.indicator,priority,project,label,tags,recur.indicator,scheduled.countdown,due,until.remaining,description.count,urgency
report.list.labels	= ID,D,PRI,PROJECT,LABEL,TAGS,R,SCHED,DUE,UNTIL,DESC,URG
report.list.sort	= entry+,urgency-,priority-

report.next.columns	= id,start.age,entry.age,depends,priority,project,label,tags,recur,scheduled.countdown,due.remaining,until.remaining,description,urgency
report.next.labels	= ID,ACTIVE,AGE,DEPS,P,PROJECT,LABEL,TAG,RECUR,S,DUE,UNTIL,DESC,URG

